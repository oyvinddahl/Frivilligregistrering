<%= form_for @frivillig, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Registerer seg sin frivillig på Karlsøyfestivalen</legend>

    <div class="control-group">
      <%= f.label :name, 'Navn', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email, 'E-post', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :phone, 'Telefonnummer' , :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :desc, 'Andre ting du vil nevne',:class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :desc, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :arriving_date, 'Ankommer Karlsøya',:class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :arriving_date, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :leaving_date,'Reise fra Karlsøya',  :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :leaving_date, :class => 'text_field' %>
      </div>
    </div>
    
    <div style="font-size:20px;font-weight:bold;margin:30px">
	  Ønskede arbeidsoppgaver
	</div>

    <div class="control-group">
      <%= f.label :vakt, 'Vakt', :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :vakt, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :bar, 'Bar / Servering', :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :bar, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :kjokken, 'Kjøkken / Mat', :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :kjokken, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :scene, 'Scene / Konserter',:class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :scene, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :bandhost, 'Innkvartering / Bandansvar',:class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :bandhost, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :seminar, 'Avvikling seminarer',:class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :seminar, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :opprigg,'Opprigg', :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :opprigg, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :nedrigg, 'Nedrigg', :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :nedrigg, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :barn, 'Barneprogram',:class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :barn, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :billettsalg,'Billettsalg', :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :billettsalg, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Registrer' , :class => 'btn btn-primary' %>
      <%= link_to 'Avbryt', frivilligs_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
