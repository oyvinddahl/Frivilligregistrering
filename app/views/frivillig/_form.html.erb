<%= form_for @frivillig, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Frivillig</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :phone, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :desc, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :desc, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :arriving_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :arriving_date, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :leaving_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :leaving_date, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :wishes, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :wishes, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', frivillig_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
